<Window x:Class="dupeferret.ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dupeferret.ui"
        xmlns:vm="clr-namespace:dupeferret.ui.ViewModels"
        xmlns:converters="clr-namespace:dupeferret.ui.Converters"
        mc:Ignorable="d"
        Title="DupeFerret - Duplicate File Finder" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Directory Selection -->
        <GroupBox Header="Directories to Scan" Grid.Row="0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <Button Content="Add Directory" Command="{Binding AddDirectoryCommand}"/>
                    <Button Content="Remove Selected" Command="{Binding RemoveDirectoryCommand}" 
                            CommandParameter="{Binding SelectedItem, ElementName=DirectoriesList}"/>
                    <Button Content="Start Scan" Command="{Binding StartScanCommand}" 
                            Background="LightGreen" FontWeight="Bold"/>
                    <Button Content="Reset" Command="{Binding ResetCommand}" 
                            Background="LightYellow"/>
                </StackPanel>

                <ListBox Grid.Row="1" x:Name="DirectoriesList" 
                         ItemsSource="{Binding Directories}" 
                         Margin="0,10,0,0"/>

                <TextBlock Grid.Row="2" Margin="0,5,0,0">
                    <Run Text="Scanning: " FontWeight="Bold"/>
                    <Run Text="{Binding CurrentDirectory, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
        </GroupBox>

        <!-- Middle Section: Results -->
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Duplicate Sets -->
            <GroupBox Header="Duplicate Sets" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" ItemsSource="{Binding DuplicateSets}" 
                              SelectedItem="{Binding SelectedDuplicateSet}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Files" Binding="{Binding FileCount}" Width="60"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding FormattedSize}" Width="80"/>
                            <DataGridTextColumn Header="Wasted" Binding="{Binding FormattedWastedSpace}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="1" Margin="5" FontSize="11" Foreground="Gray">
                        Click a set to see files. Files in each set are identical.
                    </TextBlock>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Right: Files in Selected Set -->
            <GroupBox Header="Files in Selected Set" Grid.Column="2"
                      IsEnabled="{Binding SelectedDuplicateSet, Converter={StaticResource NullToBoolConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Button Content="Keep Oldest, Delete Others" 
                                Command="{Binding KeepOldestDeleteOthersCommand}"
                                CommandParameter="{Binding SelectedDuplicateSet}"
                                Background="LightCoral"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" Margin="0,5,0,0"
                              ItemsSource="{Binding SelectedDuplicateSet.Files}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="200"/>
                            <DataGridTextColumn Header="Directory" Binding="{Binding Directory}" Width="*"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreationTime, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="130"/>
                            <DataGridTextColumn Header="Modified" Binding="{Binding LastWriteTime, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="130"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Open" Padding="5,2" Margin="2"
                                                    Command="{Binding DataContext.OpenFileLocationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="Delete" Padding="5,2" Margin="2"
                                                    Background="LightCoral"
                                                    Command="{Binding DataContext.DeleteFileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Bottom: Status Bar -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" FontWeight="Bold"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Files Scanned: "/>
                    <TextBlock Text="{Binding FilesScanned}" FontWeight="Bold" Margin="0,5,15,5"/>
                    
                    <TextBlock Text="Duplicates: "/>
                    <TextBlock Text="{Binding DuplicatesFound}" FontWeight="Bold" Margin="0,5,15,5"/>
                    
                    <TextBlock Text="Wasted Space: "/>
                    <TextBlock FontWeight="Bold" Margin="0,5,5,5">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:N0} bytes">
                                <Binding Path="TotalWastedSpace"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

